{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Slimsy",
  "type": "object",
  "properties": {
    "Slimsy": {
      "$ref": "#/definitions/Slimsy"
    }
  },
  "definitions": {
    "Slimsy": {
      "type": "object",
      "description": "Configuration of Slimsy",
      "properties": {
        "TagHelper": {
          "type": "object",
          "description": "Configuration for the Slimsy TagHelper",
          "properties": {
            "SingleSources": {
              "type": "array",
              "description": "",
              "items": {
                "type": "string"
              }
            },
            "DefaultPictureSources": {
              "type": "array",
              "description": "Specify default picture source formats and quality",
              "items": {
                "$ref": "#/definitions/PictureSource"
              }
            },
            "ImageDimensions": {
              "type": "boolean",
              "description": "Render width and height attributes on the img element"
            }
          }
        },
        "UseCropAsSrc": {
          "type": "boolean",
          "description": ""
        },
        "WidthStep": {
          "type": "integer",
          "description": ""
        },
        "MaxWidth": {
          "type": "integer",
          "description": ""
        },
        "DefaultQuality": {
          "type": "integer"
        },
        "Format": {
          "type": "string"
        },
        "BackgroundColor": {
          "type": "string"
        },
        "EncodeCommas": {
          "type": "boolean",
          "description": "Set to true to Url encode commas"
        },
        "AddSourceDimensions": {
          "type": "boolean",
          "description": "Add image source dimensions to querystrings, these values can be useful for media url generators"
        }
      }
    },
    "PictureSource": {
      "type": "object",
      "properties": {
        "Extension": {
          "type": "string"
        },
        "Quality": {
          "type": "integer"
        }
      }
    }
  },
  "required": [
    "Slimsy"
  ]
}